{
  "exclude": ["__tests__"],
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "target": "ES2020",
    "module": "ES2020",

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",

    "declaration": true,
    "emitDeclarationOnly": true,

    "outDir": "../../build/history",
    "rootDir": "."
  }
}
